<%= stylesheet_link_tag 'front/users' %>

<div class="container">
		<%= render 'front/users/user_side' %>
		<div class="edit-box col-xs-9">
			<h1>Profile_edit</h1>
			<%= form_for(@user, url: front_user_path(@user)) do |f| %>
			<%= f.label :name, "name" %>
			<%= f.text_field :name, class: "edit-name-form form-control" %>
			<%= f.label :age, "age" %>
			<%= f.number_field :age, class: "edit-age-form form-control" %>
			<div class="profile-preview preview" >
				<div class="preview-comment">Previewが表示されます</div>
			</div>
			<%= f.attachment_field :profile_image %>
			<%= f.submit "update", class: "btn btn-default" %>
			<% end %>
		</div>
</div>